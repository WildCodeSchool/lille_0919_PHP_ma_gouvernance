{% extends 'base.html.twig' %}
{% block stylesheets %}

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('advisor') }}
{% endblock %}
{% block title %}Ma Gouvernance{% endblock %}

{% block main %}


    <div id="behind">
    </div>
    <div id="displayCvAdvisor">
        {% include 'cvAdvisor.html.twig' %}
    </div>

    <section id="advisors">
        <section id="allCardsContainer">
            {% for advisor in advisors %}
                <div class="cardAdvisors">
                    <div class="cardImg">
                        {% if advisor.picture is null %}
                        <img class="advisorPic" src="https://www.laravoire.immo/wp-content/uploads/2017/06/Business-Woman-papers.jpg" alt=""/>
                        {% else %}
                            <img class="advisorPic" src="{{ advisor.picture }}" alt=""/>
                        {% endif %}
                        <div class="icon">
                            {% if advisor.linkedin is null %}
                            <a href=""><img  class="iconLinkedin" src="https://welmo.fr/blog/wp-content/uploads/2019/01/linkedin-icon.png" alt=""/></a>
                            {% else %}
                            <a href="{{ advisor.linkedin }}"><img  class="iconLinkedin" src="https://welmo.fr/blog/wp-content/uploads/2019/01/linkedin-icon.png" alt=""/></a>
                           {% endif %}
                            <img class="iconCv" src="{{ asset('build/cv.png') }}" alt=""/>
                        </div>
                    </div>
                    <div class="advisorInfo">
                        <p class="cardTitle">{{ advisor.firstname }} {{ advisor.name }}</p>
                        <p>{{ advisor.place }}</p>
                        {% if advisor.status ==0 %}
                            <p>candidature en cours</p>
                        {% elseif advisor.status ==1 %}
                            <p>candidature acceptée</p>
                        {% elseif advisor.status ==2 %}
                            <p>candidature en suspens</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </section>


    <section id="filterContainer" class="hidden">
    </section>
    <section class="filterAdvisors">
        <div class="filterTitle">Filtres :</div>
        <input type="text" id="myInput" placeholder="Chercher un nom..">

        <div class="order">

            <a href="{{ path('advisors') }}">tous</a>
            <a href="./advisors/?filter=encours"> candidature en cours</a>
            <a href="./advisors/?filter=accepté">candidature acceptée</a>
            <a href="./advisors/?filter=ensuspens">candidature en suspens</a>
        </div>
    </section>

    </section>

    {% block javascripts %}
        {{ encore_entry_script_tags('advisors') }}
        {{ encore_entry_script_tags('board') }}
    {% endblock %}
{% endblock %}

