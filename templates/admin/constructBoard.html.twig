{% extends 'base.html.twig' %}

{% block title %}Construire le board{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('board') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block main %}

    <div id="displayCvAdvisor">
        {% include 'cvAdvisor.html.twig' %}
    </div>

    {% for advisor in advisors %}
        <div class="commentAdvisor">
            <p>Justification de candidature</p>
            <form id="resumeJustification" action="{{ path('formBoard', {'board': board.id, 'advisor': advisor.id}) }}" method="POST">
                <label for="story">
                    <textarea id="resumeJustification" name="resume" rows="10" cols="33"></textarea>
                </label>
                <input type="submit">
            </form>

        </div>

        <div class="deleteAdvisor">
            <p>Retirer {{ advisor.firstname }} {{ advisor.name }} ?</p>
            <div id="ddAdvisor">
                <a href="{{ path('deleteAdvisorFromBoard', {'board': board.id, 'advisor': advisor.id}) }}">
                    <button class="definitiveDeleteAdvisor">Retirer du board</button>
                </a>
            </div>
        </div>
    {% endfor %}

    <div id="behind">
    </div>

    <div id="boardAndBoardAdvisors">
        <div id="board">
            <h1>RÃ©aliser mon board</h1>
            <div id="boardEdit">
                {{ form_start(formBoard) }}
                {{ form_widget(formBoard) }}
                {{ form_end(formBoard) }}
            </div>
        </div>


        <div id="boardAdvisors">
            <label id="research">
                <input placeholder="Rechercher">
            </label>
            {% for advisor in advisors %}
                <div class="cardAdvisorAndAdd">
                    <div id="cardAdvisor" class="cardAdvisorJS">
                        <img src="" alt="">
                        <div id="cardAdvisorInfos">
                            <p class="nameAdvisor">{{ advisor.firstname }} {{ advisor.name }}</p>
                            <p class="infosAdvisor">Autres infos utiles</p>
                            <p class="idAdvisor">{{ advisor.id }}</p>
                        </div>
                    </div>
                    <div class="removeCardAdvisor"><strong>x</strong></div>
                    <div class="addCardAdvisor">+</div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('board') }}
{% endblock %}
